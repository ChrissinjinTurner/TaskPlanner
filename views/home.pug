extends layout

block content
    .navigation-bar
        ul
            li(style="float:right")
                a(href="/logout") Log out
            li
                a(href="/home") Home
            li
                a(href="/course") Courses
            li
                a(href="/profile") Profile
    .main.container
        .row
            h1 Home Page
            form(method='GET' action='/addhomework')
                button.btn.btn-primary(type='submit') Add Homework
            form(method='GET' action='/edithomework')
                button.btn.btn-primary(type='submit') Edit Homework
            form(method='POST' action='/home') 
                div.form-group
                    label(for='deletehomeworkid') Homeowrk Id to Complete: 
                    input.form-control(type='text' id='deletehomeworkid' placeholder='Homework ID' name='deletehomeworkid')
                    button.btn.btn-primary(type='submit') Delete Homeowrk
    .tbl-content
        p Assigned Homework:
        table(cellpadding='5', cellspacing='1', border='1')
            thead
                tr
                    th TaskId
                    th Task Name
                    th Course Name
                    th Course Code
                    th Homework Type
                    th Due Date
                    th Priority
                    th Description
                    th Professor
            tbody
                each row in table
                    tr
                        td= row.TaskId
                        td= row.Taskname
                        td= row.Coursename
                        td= row.CourseCode
                        td= row.HomeworkType
                        td= row.DueDate
                        td= row.Priority
                        td= row.Description
                        td= row.Professor
                            
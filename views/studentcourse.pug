extends layout

block content
    .navigation-bar
        ul
            li(style="float:right")
                a(href="/logout") Log out
            li
                a(href="/studenthome") Home
            li
                a(href="/studentcourse") Courses
            li
                a(href="/studentprofile") Profile
    .main.container
        .row
            h1 Home Page
    .tbl-content
        p Courses you are enrolled in:
        table(cellpadding='5', cellspacing='1', border='1')
            thead
                tr
                    th Course Name
                    th Course Code
                    th Start Date
                    th End Date
                    th Location
                    th Professor
            tbody
                each row in table
                    tr
                        td= row.Coursename
                        td= row.CourseCode
                        td= row.StartDate
                        td= row.EndDate
                        td= row.location
                        td= row.Professor
                            
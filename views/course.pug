extends layout

block content
    .navigation-bar
        ul
            li(style="float:right")
                a(href="/logout") Log out
            li
                a(href="/home") Home
            li
                a(href="/course") Courses
            li
                a(href="/profile") Profile
    .main.container
        .row
            h1 Course Page
            form(method='GET' action='/addcourse')
                button.btn.btn-primary(type='submit') Add Course
            form(method='GET' action='/editcourse')
                button.btn.btn-primary(type='submit') Edit Course
            form(method='GET' action='/addstudent')
                button.btn.btn-primary(type='submit') Add Student to Course
            form(method='POST' action='/course') 
                div.form-group
                    label(for='deletecourseid') Course Id to delete (All Homeowork must be completed): 
                    input.form-control(type='text' id='deletecourseid' placeholder='Course ID' name='deletecourseid')
                    button.btn.btn-primary(type='submit') Delete Course
    .tbl-content
        p Courses you teach:
        table(cellpadding='5', cellspacing='1', border='1')
            thead
                tr
                    th CourseId
                    th Course Name
                    th Course Code
                    th Start Date
                    th End Date
                    th Location
                    th Professor
            tbody
                each row in table
                    tr
                        td= row.CourseId
                        td= row.Coursename
                        td= row.CourseCode
                        td= row.StartDate
                        td= row.EndDate
                        td= row.location
                        td= row.Professor
                            
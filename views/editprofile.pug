extends layout

block content
    .main.container
        .row
            h1 Edit Profile
            p Enter all values even if you aren't changing them
            a(href="/profile") Go back
            form(method='POST' action='/editprofile')
                div.form-group
                    label(for='firstname') First Name: 
                    input.form-control(type='text' id='firstname' placeholder='First Name' name='firstname')
                div.form-group
                    label(for='lastname') Last Name: 
                    input.form-control(type='text' id='lastname' placeholder='Last Name' name='lastname')
                div.form-group
                    label(for='username') Username: 
                    input.form-control(type='text' id='username' placeholder='Username' name='username')
                div.form-group
                    label(for='email') Email: 
                    input.form-control(type='text' id='email' placeholder='Email' name='email')
                div.form-group
                    label(for='school') School: 
                    input.form-control(type='text' id='school' placeholder='School' name='school')
                button.btn.btn-primary(type='submit') Submit
    .tbl-content
        table(cellpadding='5', cellspacing='1', border='1')
            thead
                tr
                    th First Name
                    th Last Name
                    th Username
                    th Email
                    th School
                    th Registration Date
                    
            tbody
                each row in table
                    tr  
                        td= row.Firstname
                        td= row.Lastname
                        td= row.Username
                        td= row.Email
                        td= row.School
                        td= row.RegistrationDate
                    
            